@page
@model Tshop.Pages.KhachHang.DangKyModel
@{
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item">
                        <label asp-for="RegisterVM.MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="RegisterVM.MaKh" class="form-control">
                        <span asp-validation-for="RegisterVM.MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        <label asp-for="RegisterVM.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="RegisterVM.MatKhau" type="password" class="form-control">
                        <span asp-validation-for="RegisterVM.MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        <label asp-for="RegisterVM.HoTen" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="RegisterVM.HoTen" class="form-control">
                        <span asp-validation-for="RegisterVM.HoTen" class="text-danger"></span>
                    </div>
                </div>
                <div style="display:flex;margin-left:10px">
                    <div class="form-check my-3">
                        <input asp-for="RegisterVM.GioiTinh" class="form-check-input">
                        <label class="form-check-label" for="GioiTinh">Nam</label>

                    </div>
                    <div class="form-check my-3" style="margin-left:10px">
                        <input asp-for="RegisterVM.GioiTinh" class="form-check-input">
                        <label class="form-check-label" for="GioiTinh">Nữ</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        <label asp-for="RegisterVM.NgaySinh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="RegisterVM.NgaySinh" class="form-control" type="date">
                        <span asp-validation-for="RegisterVM.NgaySinh" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <div class="col-md-6">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
                </div>
            </div>
        </form>
    </div>
</div>
