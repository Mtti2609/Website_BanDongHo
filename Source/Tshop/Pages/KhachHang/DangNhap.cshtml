@page
@model Tshop.Pages.KhachHang.DangNhapModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="LoginVM.UserName" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="LoginVM.UserName" class="form-control">
                        <span asp-validation-for="LoginVM.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="LoginVM.Password" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="LoginVM.Password" type="password" class="form-control">
                        <span asp-validation-for="LoginVM.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <div class="col-md-12 col-lg-6">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng nhập</button>
                </div>
                <div class="col-md-12 col-lg-6">
                    <a asp-page="/DangKy" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary ">Đăng ký</a>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-2">
                <a asp-page="./QuenMatKhau" title="Quên mật khẩu">Quên mật khẩu</a>
            </div>
        </form>
    </div>
</div>
